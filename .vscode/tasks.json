{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "nerf",
            "type": "shell",
            "command": "python",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            },
            "args": [
                "trainer.py",
                "--config=config/nerf_config.yaml"
            ]
        },
        {
            "label": "tensorboard",
            "type": "shell",
            "command": "tensorboard",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            },
            "args": [
                "--logdir=lightning_logs/"
            ]
        },
        {
            "label": "nerf viz",
            "type": "shell",
            "command": "python",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            },
            "args": [
                "visualize.py",
                "--config=config/nerf_config.yaml",
                "--ckpt=path/to/checkpoint.ckpt",
            ]
        },
    ]
}